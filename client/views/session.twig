<main class="main">
  <div class="score-container">
    <div class="score">
      <div class="score-desc">Popular tracks</div>
      <div class="score-number">{{ data.popular_track_count }}</div>
    </div>
    <div class="score">
      <div class="score-desc">Unpopular tracks</div>
      <div class="score-number">{{ data.unpopular_track_count }}</div>
    </div>
  </div>

  <div class="score-container">
    <div class="big score">
      <div class="score-desc">Your snobbiness score:</div>
      <div class="score-number">{{ data.snobiness_score }}%</div>
    </div>
  </div>

  <div class="small cta">
    <p class="cta-provocation">
      {{ data.cta_text }}
    </p>
